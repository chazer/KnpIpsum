{% extends "KnpIpsumBundle:DoctrineOrm:layout.html.twig" %}

{% block content_doctrine %}
    <h1>Things containing the string "{{ text }}"</h1>

    <form action="" method="get" accept-charset="utf-8">
        <label for="q">I want the things whose name contains:</label>
        <input type="text" id="q" name="q" value="{{ text }}" id="q">
        <p><input type="submit" value="Search"></p>
    </form>

    <p>
        This query will also use a JOIN operation to avoid doing multiple
         requests while fetching the categories.<br/>
        Your database will be proud of you.
    </p>
    
    {% if things %}
        <ul>
        {% for thing in things %}
            <li>* {{ thing.identifyYourselfPlease }}</li>
        {% endfor %}
        </ul>
    {% else %}
        <p>âˆ’ There are no things yet!</p>
    {% endif %}
{% endblock %}

{% set code = code() %}
